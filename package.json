{
  "name": "belt-vue-components",
  "version": "0.2.2",
  "private": false,
  "main": "./dist/belt-vue.umd.js",
  "module": "dist/belt-vue.esm.js",
  "files": [
    "dist/*",
    "src/*",
    "public/*",
    "*.json",
    "*.js"
  ],
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --target lib --name belt-vue ./src/components/index.js && npm run build:es",
    "build:es": "rollup -c ./build/rollup.es.config.js",
    "lint": "vue-cli-service lint",
    "peers": "npm install --no-save axios vue jquery lodash laravel-mix"
  },
  "dependencies": {
    "cloudinary-core": "^2.5.0",
    "uri-js": "^4.2.2",
    "vue-mq": "^0.2.1"
  },
  "peerDependencies": {
    "axios": "^0.15.2",
    "jquery": "^3.2.0",
    "laravel-mix": "^1.6.1",
    "lodash": "^4.17.10",
    "vue": "^2.5.17"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0",
    "@vue/cli-plugin-eslint": "^3.0.0",
    "@vue/cli-service": "^3.0.0",
    "vue-template-compiler": "^2.5.17",
    "rollup": "^0.41.5",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^7.1.0",
    "rollup-plugin-filesize": "^1.0.1",
    "rollup-plugin-json": "^2.1.1",
    "rollup-plugin-node-resolve": "3.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-plugin-vue": "^2.3.1",
    "rollup-watch": "^3.2.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "moduleFileExtensions": [
    "js",
    "vue"
  ]
}
